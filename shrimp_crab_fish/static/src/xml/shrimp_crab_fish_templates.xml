<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="shrimp_crab_fish.SCFDashboard" owl="1">
        <div class="scf-app">
            <div class="user-infor">
                <span id="employee_name" t-ref="name"></span><br/>
                Balance: <span id="employee_balance" t-ref="balance"></span>
            </div>
            <div class="marquee-banner">
                <marquee width="100%" direction="left">
                    ERP88 Nha Cai Den Tu Viet Nam.
                </marquee>
            </div>
            <div class="scf-alert">
                <span>Shrimp Crab Fish</span>
            </div>
            <div class="scf-countdown">
                <input id="countdown" class="no-pointer-event" value="Stop"/>
            </div>
            <div class="plate">
                <img id="result-1" t-attf-src="/shrimp_crab_fish/static/src/image/result_deer.png"/>
                <img id="result-2" t-attf-src="/shrimp_crab_fish/static/src/image/result_gourd.png"/>
                <img id="result-3" t-attf-src="/shrimp_crab_fish/static/src/image/result_rooster.png"/>
                <div class="bow">
                    <img id="bow" t-attf-src="/shrimp_crab_fish/static/src/image/bow.png" style="border:none;"/>
                </div>
            </div>
            <div class="random">
            </div>
            <div class="money-options">
                <input type="radio" id="1k" name="mn-options" value="1000"/>
                <label for="1k"><img t-attf-src="/shrimp_crab_fish/static/src/image/1kvnd.jpg"/></label>
                <input type="radio" id="5k" name="mn-options" value="5000"/>
                <label for="5k"><img t-attf-src="/shrimp_crab_fish/static/src/image/5kvnd.jpg"/></label>
                <input type="radio" id="50k" name="mn-options" value="50000"/>
                <label for="50k"><img t-attf-src="/shrimp_crab_fish/static/src/image/50kvnd.jpg"/></label>
                <input type="radio" id="100k" name="mn-options" value="100000"/>
                <label for="100k"><img t-attf-src="/shrimp_crab_fish/static/src/image/100kvnd.jpg"/></label>
                <input type="radio" id="500k" name="mn-options" value="500000"/>
                <label for="500k"><img t-attf-src="/shrimp_crab_fish/static/src/image/500kvnd.jpg"/></label>
            </div>
            <div class="scf-both">
            <div class="scf-table">
                <table>
                    <tr>
                        <td><img t-attf-src="/shrimp_crab_fish/static/src/image/deer.png" t-on-click="_onClickDeer"/><input id="deer" class="no-pointer-event" type="number" t-ref="deer-bet" value="0"/></td>
                        <td><img t-attf-src="/shrimp_crab_fish/static/src/image/gourd.png" t-on-click="_onClickGourd"/><input id="gourd" class="no-pointer-event" type="number" t-ref="gourd-bet" value="0"/></td>
                        <td><img t-attf-src="/shrimp_crab_fish/static/src/image/rooster.png" t-on-click="_onClickRooster"/><input id="rooster" class="no-pointer-event" type="number" t-ref="rooster-bet" value="0"/></td>
                    </tr>
                    <tr>
                        <td><img t-attf-src="/shrimp_crab_fish/static/src/image/fish.png" t-on-click="_onClickFish"/><input id="fish" class="no-pointer-event" type="number" t-ref="fish-bet" value="0"/></td>
                        <td><img t-attf-src="/shrimp_crab_fish/static/src/image/crab.png" t-on-click="_onClickCrab"/><input id="crab" class="no-pointer-event" type="number" t-ref="crab-bet" value="0"/></td>
                        <td><img t-attf-src="/shrimp_crab_fish/static/src/image/shrimp.png" t-on-click="_onClickShrimp"/><input id="shrimp" class="no-pointer-event" type="number" t-ref="shrimp-bet" value="0"/></td>
                    </tr>
                </table>
            </div>
            <div class="scf_allbet">
                <table>
                    <thead>
                        <tr>
                            <th>User name</th>
                            <th>Bet result</th>
                            <th>Bet amount</th>
                        </tr>
                    </thead>
                    <tbody id="data-output">
                    </tbody>
                </table>
            </div>
                </div>
            <div class="scf-bet-button">
                <button id="bet-button" class="bet-button"  t-on-click="_onClickBet">Bet</button>
                <button id="cancel-button" class="cancel-button" t-on-click="_onClickCancel">Cancel</button>
            </div>
        </div>
    </t>
</templates>